include ../avatar/avatar
include ../title/title
include ../text/text

mixin thread(data)
	.thread(class={thread__state_unread: data.unreadCounter})
		.thread__name= data.name
		+avatar.thread__avatar(src=data.avatar)
		+title.thread__title= data.name
		+text.thread__text= data.lastMessage
		.thread__date= data.date
		.thread_counter= data.unreadCounter
