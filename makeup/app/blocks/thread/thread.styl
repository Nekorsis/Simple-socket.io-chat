right-offset = 25px

.thread
	display flex
	height 110px
	border-top separator

	&_state_unread
		&::before
			content ''
			position absolute
			top calc(50% - 5px)
			left 10px
			height 10px
			width 10px
			background-color red
			border-radius 50%

	&:first-child
		border-top none

	&:last-child
		border-bottom separator

	&__avatar
		align-self center
		margin-left 30px

	&__info
		position relative
		padding-top 25px
		padding-left 20px
		width 100%
		flex 1

	&__name
		top 25px
		font-weight 600

	&_state_unread &__name
		color c-blue !important

	&__text
		margin-top 10px
		width 200px
		line-height 1.3
		word-break break-word
		white-space pre-wrap

	&__date
		position absolute
		right right-offset
		top 25px
		color c-gray

	&__counter
		position absolute
		top 60px
		right right-offset
		padding-top 5px
		padding-bottom 3px
		padding-right 5px
		padding-left 5px
		min-width 20px
		font-size 12px
		text-align center
		font-weight 600
		color white
		background-color c-orange
		border-radius 10px


